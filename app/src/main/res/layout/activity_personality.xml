<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1c40f"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Part5_personapersonalityy"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_weight="0.3"
        android:background="@drawable/personality_bkg"
        android:gravity="center" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/camera" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2_personality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Choose your level"
        android:textColor="#8e44ad"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/Part3_personality"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_marginTop="10dp"
        android:layout_weight="0.3"
        android:background="#16a085"
        android:gravity="center" >

        <Button
            android:id="@+id/btn1_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:background="@drawable/custom_button"
            android:text="1"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn2_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            android:text="2"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn3_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"
            android:text="3"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Part1_personality"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_weight="0.3"
        android:background="#16a085"
        android:gravity="center" >

        <Button
            android:id="@+id/btn4_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:background="@drawable/custom_button2"
            android:text="4"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn5_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button2"
            android:text="5"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn6_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button2"
            android:text="6"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Part2_personality"
        android:layout_width="fill_parent"
        android:layout_height="130dip"
        android:layout_weight="0.3"
        android:background="#16a085"
        android:gravity="center" >

        <Button
            android:id="@+id/btn7_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:background="@drawable/custom_button3"
            android:text="7"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn8_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button3"
            android:text="8"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn9_personality"
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button3"
            android:text="9"
            android:textColor="#34495e"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>