<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
        	<gradient android:angle="90" android:centerColor="#e67e22" android:endColor="#e67e22" android:startColor="#e67e22" />
			<corners android:radius="5dp" />
			<stroke android:width="2dp" android:color="#e67e22" />
		</shape>
    </item>
	<item android:state_pressed="true">
        <shape android:shape="rectangle">
        	<gradient android:angle="90" android:centerColor="#CA7B35" android:endColor="#CA7B35" android:startColor="#CA7B35" />
			<corners android:radius="5dp" />
			<stroke android:width="4dp" android:color="#e67e22" />
		</shape>
    </item>
</selector>