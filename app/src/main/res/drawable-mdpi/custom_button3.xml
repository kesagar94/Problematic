<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
        	<gradient android:angle="90" android:centerColor="#e74c3c" android:endColor="#e74c3c" android:startColor="#e74c3c" />
			<corners android:radius="5dp" />
			<stroke android:width="2dp" android:color="#e74c3c" />
		</shape>
    </item>
	<item android:state_pressed="true">
        <shape android:shape="rectangle">
        	<gradient android:angle="90" android:centerColor="#CC3322" android:endColor="#CC3322" android:startColor="#CC3322" />
			<corners android:radius="5dp" />
			<stroke android:width="4dp" android:color="#e74c3c" />
		</shape>
    </item>
</selector>