<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
        	<gradient android:angle="90" android:centerColor="#27ae60" android:endColor="#27ae60" android:startColor="#27ae60" />
			<corners android:radius="5dp" />
			<stroke android:width="2dp" android:color="#31AB64" />
		</shape>
    </item>
	<item android:state_pressed="true">
        <shape android:shape="rectangle">
        	<gradient android:angle="90" android:centerColor="#228A4D" android:endColor="#228A4D" android:startColor="#228A4D" />
			<corners android:radius="5dp" />
			<stroke android:width="4dp" android:color="#31AB64" />
		</shape>
    </item>
</selector>